<Window x:Class="OrdinaryCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdinaryCalc"
        mc:Ignorable="d"      
        Height="500"
        Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="black"
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="170"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <TextBox Text = "1"
                     Grid.Row = "0"
                     Height = "160"
                     Width = "280"
                     Margin = "10"                 
                     VerticalAlignment = "Top"
                     HorizontalAlignment = "Left"
                    Background = "Black"
                     Foreground = "White"
                     >

            </TextBox>
            
            <StackPanel Grid.Row ="1"
                        Margin ="10,0,5,5"
                        Orientation = "Horizontal">
                
                <RadioButton    
                        Content = "C"
                        Foreground = "Black"
                        Width = "62"
                        Margin = "0,0,10,0"                        
                        Style = "{StaticResource MenuButtonThemeGray}"/>

                <RadioButton 
                        Content = "+-"
                        Width = "62"
                        Margin = "0,0,10,0"                       
                        Style = "{StaticResource MenuButtonThemeGray}"/>

                <RadioButton                     
                        Content="%"
                        Width="62"
                        Margin="0,0,10,0"
                        Style="{StaticResource MenuButtonThemeGray}"/>

                <RadioButton 
                        Content="/"
                     Foreground="White"
                        Background="Orange"
                        Width="62"
                        Margin="0,0,5,0"
                    Style="{StaticResource MenuButtonThemeGray}"
                        />

            </StackPanel>

            <StackPanel Grid.Row ="2"
            Margin ="10,0,5,5"
            Orientation = "Horizontal">

                <RadioButton    
                    Content = "7"
                    Foreground = "White"
                    Background="DarkGray"
                    Width = "62"
                    Margin = "0,0,10,0"                        
                    Style = "{StaticResource MenuButtonThemeGray}"/>

                <RadioButton 
                    Content = "8"
                    Foreground = "White"
                    Background="DarkGray"
                    Width = "62"
                    Margin = "0,0,10,0"                       
                    Style = "{StaticResource MenuButtonThemeGray}"/>

                <RadioButton                     
                    Content="9"
                     Foreground = "White"
                    Background="DarkGray"
                    Width="62"
                    Margin="0,0,10,0"
                    Style="{StaticResource MenuButtonThemeGray}"/>

                <RadioButton 
                    Content="*"
                     Foreground="White"
                    Background="Orange"
                    Width="62"
                    Margin="0,0,5,0"
                    Style="{StaticResource MenuButtonThemeGray}"
            />

            </StackPanel>

            <StackPanel Grid.Row ="3"
            Margin ="10,0,5,5"
            Orientation = "Horizontal">

                <RadioButton    
                    Content = "4"
                    Foreground = "White"
                    Background="DarkGray"                   
                    Width = "62"
                    Margin = "0,0,10,0"                        
                    Style = "{StaticResource MenuButtonThemeGray}"/>

                <RadioButton 
                     Content = "5"
                    Foreground = "White"
                    Background="DarkGray"
                    Width = "62"
                    Margin = "0,0,10,0"                       
                    Style = "{StaticResource MenuButtonThemeGray}"/>

                <RadioButton                     
                    Content="6"
                    Foreground = "White"
                    Background="DarkGray"
                    Width="62"
                    Margin="0,0,10,0"
                    Style="{StaticResource MenuButtonThemeGray}"/>

                <RadioButton 
                    Content="-"
                     Foreground="White"
                    Background="Orange"
                     Width="62"
                    Margin="0,0,5,0"
                    Style="{StaticResource MenuButtonThemeGray}"
            />

            </StackPanel>

            <StackPanel Grid.Row ="4"
                         Margin ="10,0,5,5"
                        Orientation = "Horizontal">

            <RadioButton    
                Content = "1"
                Foreground = "White"
                Background="DarkGray"
                Width = "62"
                Margin = "0,0,10,0"                        
                Style = "{StaticResource MenuButtonThemeGray}"/>

            <RadioButton 
                Content = "2"
                Foreground = "White"
                Background="DarkGray"
                Width = "62"
                 Margin = "0,0,10,0"                       
                Style = "{StaticResource MenuButtonThemeGray}"/>

            <RadioButton                     
                Content="3"
                Foreground = "White"
                Background="DarkGray"
                Width="62"
                Margin="0,0,10,0"
                Style="{StaticResource MenuButtonThemeGray}"/>

             <RadioButton 
                 Content="+"
                 Foreground="White"
                Background="Orange"
                Width="62"
                Margin="0,0,5,0"
                Style="{StaticResource MenuButtonThemeGray}"        
            />

            </StackPanel>

            <StackPanel Grid.Row ="5"
                        Margin ="10,0,5,10"
                        Orientation = "Horizontal">

            <RadioButton    
                Content = "0"
                Foreground = "White"
                Background="DarkGray"
                Width = "134"
                Margin = "0,0,10,0"                        
                Style = "{StaticResource MenuButtonThemeGray}"/>

             <RadioButton                     
                Content=","
                Foreground = "White"
                Background="DarkGray"
                Width="62"
                Margin="0,0,10,0"
                Style="{StaticResource MenuButtonThemeGray}"/>

             <RadioButton 
                Content="="
                 Foreground = "White"
                Background="Orange"
                Width="62"
                Margin="0,0,5,0"
                 Style="{StaticResource MenuButtonThemeGray}"/>

            </StackPanel>
        </Grid>


    </Border>
</Window>
